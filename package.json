{
  "name": "animexa",
  "version": "1.0.0",
  "description": "Animexa - Desktop 3D Animation Viewer with animation retargeting and frame export",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "start": "electron .",
    "package": "electron-builder"
  },
  "keywords": [
    "electron",
    "three.js",
    "3d",
    "animation",
    "viewer",
    "retargeting"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.animexa.app",
    "productName": "Animexa",
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "icon256.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "icon": "icon512.png",
      "category": "public.app-category.graphics-design"
    },
    "linux": {
      "icon": "icon512.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Graphics"
    }
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "bulma": "^0.9.4",
    "electron": "^28.0.0",
    "three": "^0.160.0"
  },
  "devDependencies": {
    "electron-builder": "^24.9.0",
    "electron-vite": "^2.0.0",
    "vite": "^5.0.0"
  }
}
