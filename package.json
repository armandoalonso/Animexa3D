{
  "name": "animexa3d",
  "version": "1.0.0",
  "description": "Animexa3D - Desktop 3D Animation Viewer with animation retargeting and frame export",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "start": "electron .",
    "package": "electron-builder",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:smoke": "vitest run --config vitest.smoke.config.mjs",
    "test:e2e": "playwright test",
    "test:setup": "node scripts/test-setup.js"
  },
  "keywords": [
    "electron",
    "three.js",
    "3d",
    "animation",
    "viewer",
    "retargeting"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.animexa.app",
    "productName": "Animexa",
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "icon256.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "icon": "icon512.png",
      "category": "public.app-category.graphics-design"
    },
    "linux": {
      "icon": "icon512.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Graphics"
    }
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "bulma": "^0.9.4",
    "electron": "^39.2.4",
    "jszip": "^3.10.1",
    "three": "^0.160.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "electron-builder": "^24.9.0",
    "electron-vite": "^4.0.1",
    "happy-dom": "^20.0.11",
    "playwright": "^1.57.0",
    "vite": "^7.2.6",
    "vitest": "^4.0.15"
  }
}
